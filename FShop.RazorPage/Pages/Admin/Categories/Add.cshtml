@page "{parentId?}"
@model FShop.RazorPage.Pages.Admin.Categories.AddModel
@{
    ViewData["title"] = "افزودن دسته بندی";
    ViewData["selected"] = "products_categories";
}
<h3>@ViewData["title"]</h3>
<form method="post" class="card">
    <div class="row card-body">
        <div class="col-md-6">
            @Html.EditorFor(m => m.Title)
        </div>
        <div class="col-md-6">
            @Html.EditorFor(m => m.Slug)
        </div>
        @Html.EditorFor(m => m.SeoData)
    </div>
    <div class="card-footer text-left">
        @*        <button class="btn btn-success" type="submit">ثبت اطلاعات</button>
*@    
        <cancel-button></cancel-button>

        <Submit></Submit>
    </div>
</form>


