@page "{handler?}"
@using FShop.RazorPage.Infrastructure
@model FShop.RazorPage.Pages.Admin.Sliders.IndexModel
@{
    ViewData["title"] = "مدیریت اسلایدرها";
    ViewData["selected"] = "sliders";
}
<h3>@ViewData["title"]</h3>
<a asp-page="Add" class="btn btn-success mb-2">افزودن اسلایدر</a>
<div class="table-responsive card card-body p-0">
    <table class="table table-bordered mb-0">
        <thead>
            <tr>
                <th>تصویر اسلایدر</th>
                <th>عنوان</th>
                <th>لینک</th>
                <th>عملیات </th>
   
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Sliders)
            {
                <tr>
                    <td class="text-bold-500">
                        <img src="@Directories.GetSliderImage(@item.ImageName)" style="max-width: 100px"/>
                    </td>
                    <td>@item.Title</td>
                    <td class="text-bold-500">@item.Link</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm">ویرایش</a>
                        <delete-item url="@Url.Page("Index", "DeleteSlider", new { sliderId = @item.Id })">
                            حذف
                        </delete-item>
                    </td>
                </tr>

            }
            @if (Model.Sliders.Any() == false)
            {
                <tr>
                    <td colspan="4" class="text-center">موردی برای نمایش وجود ندارد</td>
                </tr>
            }

        </tbody>
    </table>
</div>



