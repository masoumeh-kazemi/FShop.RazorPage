@page "{id?}"
@using FShop.RazorPage.Infrastructure
@using FShop.RazorPage.TagHelpers
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model FShop.RazorPage.Pages.Admin.Roles.IndexModel
@{
    ViewData["title"] = "مدیریت نقش ها";
    ViewData["selected"] = "roles";
}
<h3>@ViewData["title"]</h3>
<a asp-page="Add" class="btn btn-success mb-2">افزودن نقش</a>
<div class="table-responsive card card-body p-0">
    <table class="table table-bordered mb-0">
        <thead>
        <tr>
            <th>#</th>
            <th>عنوان نقش</th>
            <th>عملیات</th>

        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Roles)
        {
            <tr>
                <td>@item.Id</td>
                <td class="text-bold-500">
                    @item.Title
                </td>
                <td>
                    <a class="btn btn-primary btn-sm" asp-page="Edit" asp-route-id="@item.Id">ویرایش</a>
                </td>
            </tr>

        }
        @if (Model.Roles.Any() == false)
        {
            <tr>
                <td colspan="4" class="text-center">موردی برای نمایش وجود ندارد</td>
            </tr>
        }

        </tbody>
    </table>
</div>

