@page
@model FShop.RazorPage.Pages.Admin.Banners.EditModel
@{
    ViewData["title"] = "ویرایش بنر";
    ViewData["selected"] = "banners";
}
<form method="post" class="card" enctype="multipart/form-data">
    
    <div class="row card-body">
        <div class="col-md-6">
            @Html.EditorFor(m=>m.Position)
        </div>
        <div class="col-md-6">
            @Html.EditorFor(m=> m.Link)
        </div>
        <div class="col-md-12">
            @Html.EditorFor(m=>m.ImageFile)
        </div>
    </div>
    <div class="card-footer text-left">
        <button class="btn btn-success" type="submit">ثبت اطلاعات</button>
    </div>
</form>