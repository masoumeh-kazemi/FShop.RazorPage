@page
@model FShop.RazorPage.Pages.Admin.Banners.AddModel
@{
    ViewData["title"] = "افزودن بنر";
    ViewData["selected"] = "banners";
}
<h2>@ViewData["title"]</h2>
<form method="post" class="card" enctype="multiPart/form-data">
    <div class="row card-body">
        <div class="col-md-6">
            @Html.EditorFor(m=>m.Position)
        </div>
        <div class="col-md-6">
            @Html.EditorFor(m=>m.Link)
        </div>
        <div class="col-md-12">
            @Html.EditorFor(m=>m.ImageFile)
        </div>
    </div>
    <div class="card-footer text-left">
        <button class="btn btn-success" type="submit">ثبت اطلاعات</button>
    </div>
</form>