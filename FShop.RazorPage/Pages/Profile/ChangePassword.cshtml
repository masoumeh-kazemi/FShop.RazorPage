@page
@model FShop.RazorPage.Pages.Profile.ChangePasswordModel
@{
    Layout = "Shared/Layout/_Layout";
    ViewData["title"] = "تغیییر کلمه عبور";
}

<div class="row mb-5">
    <partial name="Shared/Profile/_ProfileSideBar" />
    <div class="col-lg-9 col-md-8">
        <div class="row mb-4">
            <div class="col-12">
                <div class="section-title mb-2">
                   @ViewData["title"]
                </div>
                <section class="shadow-around p-3">
                    <form method="post">
                        <div class="row">
                            <div class="col-lg-12 mb-5">
                                @Html.EditorFor(m=>m.CurrentPassword)
                            </div>

                            <div class="col-lg-6 mb-5">
                                @Html.EditorFor(f=>f.Password)
                            </div>

                            <div class="col-lg-6 mb-5">
                             @Html.EditorFor(m=>m.ConfirmPassword)
                            </div>

                            <div class="col-12">
                                <div class="form-element-row text-left">
                                    <button type="submit" class="btn-element btn-success-element">
                                        <i class="fad fa-user-edit"></i>
                                        ذخیره تغییرات
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </section>
            </div>
        </div>
    </div>
</div>

